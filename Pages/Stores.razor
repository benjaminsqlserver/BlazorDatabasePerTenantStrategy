@page "/stores"
@attribute [Authorize]

<PageTitle>Stores</PageTitle>
<RadzenStack>
<RadzenRow AlignItems="AlignItems.Center">
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenText Text="Stores" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
    </RadzenColumn>
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
            <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                <RadzenSplitButtonItem Text="CSV" Value="csv" />
            </RadzenSplitButton>
            <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
        </RadzenStack>
    </RadzenColumn>
</RadzenRow>
<RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" />
<RadzenRow>
    <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@stores"    TItem="BikeStores.Models.ConData.Store" RowDoubleClick="@EditRow" >
            <Columns>
                <RadzenDataGridColumn TItem="BikeStores.Models.ConData.Store" Property="store_id" Title="storeid">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="BikeStores.Models.ConData.Store" Property="store_name" Title="storename">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="BikeStores.Models.ConData.Store" Property="phone" Title="phone">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="BikeStores.Models.ConData.Store" Property="email" Title="email">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="BikeStores.Models.ConData.Store" Property="street" Title="street">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="BikeStores.Models.ConData.Store" Property="city" Title="city">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="BikeStores.Models.ConData.Store" Property="state" Title="state">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="BikeStores.Models.ConData.Store" Property="zip_code" Title="zipcode">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="BikeStores.Models.ConData.Store" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="store">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, store)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
        </RadzenDataGrid>
    </RadzenColumn>
</RadzenRow>
</RadzenStack>
